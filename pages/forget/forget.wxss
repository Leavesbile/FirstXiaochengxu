/* forget.wxss */
.wrap {
  height: 100vh;
  background: #fff;
  padding-top: 32rpx;
}
.logo {
  height: 240rpx;
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170717/20170717160124-741.png) no-repeat center center;
  background-size: 172rpx 84rpx;
}
label {
  font-size: 28rpx;
  color: #000;
  display: block;
  margin-bottom: 36rpx;
}
input {
  font-size: 28rpx;
  color: #333;
  height: 60rpx;
  border-bottom: 1px solid #eee;
  line-height: 60rpx;
  margin-bottom: 58rpx;
}
.colors {
  font-size:28rpx;
  color: #ccc; 
  line-height: 70rpx;
}
.telephone {
  position: relative;
  border-bottom: 1px solid #eee;
  margin-bottom: 58rpx;
}
.telephone input {
  width: 80%;
  border-bottom: none;
  margin:  0;
}
.telephone text {
  position: absolute;
  display: block;
  width: 150rpx;
  top:20rpx;
  right: 0rpx;
  font-size: 28rpx;
  color: #ae846c;
  text-align: center;
}
.registered {
  width: 528rpx;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: #ae846c;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.2);
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  margin: 140rpx auto;
}

