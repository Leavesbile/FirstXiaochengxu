/* login.wxss */
.wrap {
  height: 100vh;
  background: #fff;
  position: relative;
}
.logo {
  height: 240rpx;
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170717/20170717160124-741.png) no-repeat center center;
  background-size: 172rpx 84rpx;
}
label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 36rpx;
}
input {
  font-size: 28rpx;
  color: #333;
  height: 90rpx;
  border-bottom: 1px solid #eee;
  line-height: 70rpx;
  margin-bottom: 58rpx;
}
.colors {
  font-size:28rpx;
  color: #ccc; 
  line-height: 70rpx;
}
form text {
  display: block;
  font-size: 24rpx;
  text-align: right;
  color: #2b92e9;
}

.login {
  width: 528rpx;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: #ae846c;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.2);
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  margin: 140rpx auto;
}
.registered{
  position: absolute;
  width:100vw;
  height:40rpx;
  bottom:120rpx;
  left:0;
  text-align: center;
}
.registered text {
  text-decoration: underline;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #333;
}