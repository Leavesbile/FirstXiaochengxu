/* goodsDetails.wxss */
/* 富文本解析 */
@import "../../wxParse/wxParse.wxss";
.wrap {
  padding: 0 0 120rpx 0;
}
swiper {
  height: 750rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.goodsBox {
  height: 992rpx;
  background: #fff;
}
.goodsName {
  display: block;
  height: 80rpx;
  margin: 20rpx 0;
  font-size: 14px;
  text-align: left;
  color: rgba(0, 0, 0, 0.87);
}
.details {
  padding: 0 20rpx;
}
.price {
  height: 40rpx;
  margin-bottom: 20rpx;
}
.newPrice {
  float: left;
  font-size: 36rpx;
  color: #f6a623;
}
.postage {
  float: left;
  width: 72rpx;
  height: 32rpx;
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170714/20170714165419-571.png) no-repeat;
  background-size: 100% 100%;
  margin-right: 16rpx;
}
.price text {
  line-height: 36rpx;
}
.oldPrice {
  float: left;
  font-size: 12px;
  line-height: 1.5;
  text-decoration: line-through;
  color: rgba(0, 0, 0, 0.26);
}
.annotation text {
  font-size: 24rpx;
  line-height: 48rpx;
  color: rgba(0, 0, 0, 0.26);
}
.adress {
  margin-right: 105rpx;
}
.sales {
  float: right;
}
.Pop-ups {
  padding: 0 20rpx;
   margin: 34rpx 0;
  background: #fff;
}
.show {
  display: block;

}
.hide {
  display: none;
}

.choose, .parameterNav {
  height: 88rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  color: rgba(0, 0, 0, 0.87);
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170711/20170711170455-248.png) calc(100%) 32rpx no-repeat;
  background-size: 36rpx 36rpx;
}
.choose {
   border-bottom: 1px solid #eee;
}
.choose text {
  margin-right: 20rpx;
}
.Illustration {
  background: #fff
}
.IllustrationNav {
  height: 88rpx;
  padding: 0 20rpx;
}
.IllustrationNav view {
  border-bottom: 1px solid #eee;
  height: 88rpx;
}
.IllustrationNav text {
  float: left;
  font-size: 28rpx;
  width: 50%;
  text-align: center;
  line-height: 88rpx;  
}
.onDetails {
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170718/20170718180551-633.png) no-repeat 246rpx center;
  background-size: 32rpx 32rpx;
}
.IllustrationNav view text:nth-child(2) {
  color:  rgba(0, 0, 0, 0.43);
}
.imgBox view {
  position: relative;
  width:100%;
  height: 750rpx;
}
.imgBox image {
  display: block;
  width: 100%;
  height: 100%;
}
.imgBox text {
  position: absolute;
  left: 80rpx;
  top: 80rpx;
  font-size: 36rpx;
}
.placeOder {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  height: 98rpx;
  background: #fff;
  box-shadow: 0 0 16rpx #666666
}
.placeOder view {
  float: left;
  width: 244rpx;
  font-size: 28rpx;
  line-height: 98rpx;
  color: #ae846c;
  border-left: 1px solid #eee;
  text-align: center;
}
.placeOder .nowBuy {
  background: #ae846c;
  color: #fff;
}
.placeOder view:nth-child(1) {
  width: 254rpx;
}
.placeOder .cart {
  float: left;
  width: 50%;
  padding-top: 64rpx;
  font-size: 20rpx;
  color: #333333;
  line-height: 30rpx;
  text-align: center;
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170712/20170712094327-517.png) no-repeat center 10rpx;
  background-size: 48rpx 48rpx;
}
contact-button{
  box-sizing: border-box;
  float: left;
  width:50%;
  text-align: center;
  padding-top: 10rpx;
  color:#333333;
  height:100rpx;
  line-height: 1.3;
}
contact-button text{
  display: block;
  width: 100%;
  text-align: center;
  font-size: 20rpx;
}
.remake {
  position: fixed;
  z-index: 888;
  width:100%;
  height:0;
  bottom:0px;
  background:rgba(0,0,0,0.4);
  /*transition: all 3s;*/
}
.remake-active{
  height:100vh;
}
.selectSpecifications, .parameter{
  position: fixed;
  width: 710rpx;
  z-index: 898;
  left: 0;
  bottom: 0;
  background: #fff;
  padding: 0 20rpx;
}
.parameter {
  height: 0;transition: all .5s;
}
.parameter-active{
  height:894rpx;
  padding-bottom: 100rpx; 
}
.selectSpecifications {
  padding: 10rpx 20rpx 0;
  height:0;
  transition: all .5s;
}
.selectSpecifications-active{
  overflow: visible;
  height:894rpx;
}
.selectSpecifications .results {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 48rpx;
  position: relative;
  padding-left: 252rpx;
  overflow: visible;
}
.results text {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.87);
}
.results image {
  position: absolute;
  left: 12rpx;
  top: -100rpx;
  height: 180rpx;
  width: 180rpx;
  padding: 10rpx; 
  background: #f8f8f8

}
.results view {
  margin-bottom: 20rpx;
}
.orderColor view {
  float: left;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  width: 100%;
}
.orderColor {
  overflow: hidden;
  border-bottom: 1px solid #eee 
}
.orderColor text, orderSize text {
  float: left;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
  padding: 16rpx;
  font-size: 24rpx;
  color: rgba(51, 51, 51, 0.87);
  background: #f4f4f4;
  border-radius: 8rpx;
}
.orderColor .noColor {
  opacity: 0.4;
}
.orderColor .inChoose {
  background: #ae846c;
  color: #fff;
}
.quantity {
  height: 95rpx;
  border-bottom: 1px solid #eee;
}
.quantity text {
  float: left;
  line-height: 95rpx;
  font-size: 28rpx;
}
.actionNum image {
  float: left;
  margin-top: 24rpx;

}
.actionNum input {
  float: left;
  width: 92rpx;
  line-height: 95rpx;
  margin-top: 24rpx;
}
.parameter view {
  font-size: 32rpx;
  height: 100rpx;
  border-bottom: 1px solid rgba(0,0,0,0.12);
  line-height: 100rpx;
}
/* .parameter > view:nth-child(1) {
  position: relative
} */
.parameter text {
  float: left;
  text-align: left;
  font-size: 28rpx;
}
.parameter view text:nth-child(2n+1) {
  width: 168rpx;
  margin-right: 40rpx;
  text-align: right;
  color: rgba(0, 0, 0, 0.26);
}
.parameter view:nth-child(1) text {
  font-weight: bold;
  color: #333333;
}

.parameter .close, .selectSpecifications .close {
  position: absolute;
  top: 22rpx;
  right: 16rpx;
  width: 44rpx;
  height: 44rpx;
  background: url(http://papermaker.cn/files/papermaker/applyImages/20170715/20170715151159-837.png) no-repeat;
  background-size: 100% 100%;
  border-bottom: 0;
}
.chooseCon text{
  margin-right:20rpx;
}
