/* searchInfo.wxss */

.search{
  padding:0 32rpx;
  background:#ae846c;
  height:96rpx;
  color:#fff;
  font-size:28rpx;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.2);
}
.searchInput{
  float: left;
  border:none;
  border-radius: 32rpx;
  height:64rpx;
  width:510rpx;
  background:#fff;
  padding-left:76rpx;
  margin: 16rpx 0;
  background: #fff url(http://papermaker.cn/files/papermaker/applyImages/20170714/20170714134126-156.png) no-repeat 28rpx 16rpx;
  background-size: 32rpx 32rpx;
}
input {
  height: 64rpx;
  line-height: 64rpx;
  color: #333;
  font-size: 24rpx;
}
.input-placeholder{
  font-size: 12px;
  line-height: 1;
  text-align: left;
  color: rgba(0, 0, 0, 0.26);
}
.search text{
  float: right;
  line-height: 96rpx;
}

/*历史搜索*/
.histroySearch>text{
  display: block;
  color:#bbb;
  font-size:28rpx;
  padding: 48rpx 0;
}
.histroyList>text{
  font-size:24rpx;
  color:rgba(51,51,51,0.87);
  background: #fff;
  border-radius: 8rpx;
  padding:16rpx;
  margin-right:32rpx;
  margin-bottom:32rpx;
}






.wrap{
  height:calc(100vh - 96rpx);

}

/*产品列表*/
.projuct{
  width:calc(100% - 44rpx);
  min-height:200rpx;
  background:#fff;
  box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.2);
  margin:32rpx 0; 
  padding:20rpx;
}
.projuct>image{
  width:200rpx;
  height:200rpx;
  float: left;
}
.projuctD{
  float:right;
  width:396rpx;
  font-size: 24rpx;
  position: relative;
  color:#bbb;
  padding-bottom:40rpx;
  min-height:160rpx;
}
.projuct::after{
  display: block;
  content: '';
  clear:both;
}
.projuctName{
  display: block;
  font-size:28rpx;
  font-weight:500;
  color:rgba(0, 0, 0, 0.87);
  margin-bottom:10rpx;
}
.projuctDesc{
  line-height: 44rpx;
}
.money{
  position: absolute;
  bottom:0;
  left:0;
  color:#f6a623;
}
.money text{
  font-size:32rpx;
}
.sales{
  position: absolute;
  bottom:0;
  right:0
}











